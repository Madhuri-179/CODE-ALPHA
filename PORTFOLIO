// script.js

// Add event listener to hero button
document.querySelector('#hero button').addEventListener('click', () => {
    // Scroll to projects section
    document.querySelector('#projects').scrollIntoView({ behavior: 'smooth' });
});

// Add event listener to project buttons
document.querySelectorAll('.project-card button').forEach((button) => {
    button.addEventListener('click', () => {
        // Open project link in new tab
        window.open('https://www.example.com/project', '_blank');
    });
});

// Add event listener to contact form
document.querySelector('#contact form').addEventListener('submit', (e) => {
    e.preventDefault();
    // Send form data to server or API
    console.log('Form submitted!');
});
